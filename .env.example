# Kraken API credentials
KRAKEN_API_KEY=your_api_key_here
KRAKEN_API_SECRET=your_api_secret_here

# Server mode (set to any value to use PaperExchange instead of live Kraken)
# DEV_MODE=1

# Server bind address
# INGOT_BIND=127.0.0.1
# INGOT_PORT=3847

# Tracing / logging
# RUST_LOG=ingot_server=info,ingot_engine=info,ingot_connectivity=debug,ingot_core=info

# PostgreSQL
DATABASE_URL=postgres://ingot_app:ingot_dev@localhost:5432/ingot

# QuestDB
QUESTDB_ILP_ADDR=localhost:9009

# Storage tuning (optional)
# PG_POOL_SIZE=5
# STORAGE_BATCH_SIZE=50
# STORAGE_FLUSH_INTERVAL_MS=100
